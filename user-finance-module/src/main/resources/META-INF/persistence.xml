<?xml version="1.0" encoding="UTF-8" ?>
<persistence>
    <persistence-unit name="auction_db">
        <class >com.auction.userfinance.persistence.entities.User</class>
        <class >com.auction.userfinance.persistence.entities.Wallet</class>
        <class >com.auction.userfinance.persistence.entities.FinancialTransaction</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/auction_db"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
        </properties>
    </persistence-unit>
</persistence>

